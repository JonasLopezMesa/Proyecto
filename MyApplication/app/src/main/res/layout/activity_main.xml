<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    tools:context=".MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="1280dp"
            android:layout_height="150dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ba"
            android:scaleType="fitXY"
            />

        <ImageView
            android:layout_width="1280dp"
            android:layout_height="588dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/princ"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spain"
                android:layout_gravity="bottom"
                android:src="@drawable/misc_flags_spain" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unitedkindong"
                android:layout_gravity="bottom"
                android:src="@drawable/uk" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/italy"
                android:layout_gravity="bottom"
                android:src="@drawable/misc_flags_italia" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/france"
                android:layout_gravity="bottom"
                android:src="@drawable/misc_flags_france" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/germany"
                android:layout_gravity="bottom"
                android:src="@drawable/misc_flags_germany" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
