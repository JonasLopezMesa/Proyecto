<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1025dp"
    android:layout_height="641dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="640dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal">
        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="450dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/botella_vino"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:background="#c9ce9f">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="774dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/linearLayout"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="714dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Tinto"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:background="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="774dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="594dp"
            android:layout_height="100dp"
            android:background="#e0e595">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="594dp"
                android:layout_height="100dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="594dp"
                    android:layout_height="35dp"
                    android:layout_weight="0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="EL ABUELO DE LA BODEGA"
                        android:id="@+id/textView"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:layout_gravity="bottom" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="594dp"
                    android:layout_height="65dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bodega con tiempo"
                        android:id="@+id/textView2" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:background="#1441e6"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:background="#3cba6a"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:background="#8a4de5"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="774dp"
        android:layout_height="350dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_toEndOf="@+id/linearLayout"
        android:weightSum="1"
        android:id="@+id/linearLayout4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="350dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="350dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:layout_weight="0"
                android:background="#b88181"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_weight="0"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:layout_weight="0"
                android:background="#6c5aaf"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="534dp"
            android:layout_height="350dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="534dp"
                android:layout_height="125dp">

                <TextView
                    android:layout_width="534dp"
                    android:layout_height="match_parent"
                    android:text="Capa media-baja. Bonito color rojo picota. Limpio y brillante"
                    android:id="@+id/textView4"
                    android:textSize="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/activity_horizontal_margin" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="534dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="534dp"
                    android:layout_height="wrap_content"
                    android:text="En nariz es fresco con notas de fruta madura. Aparecen suaves notas balsÃ¡micas algunos recuerdos de flores secas de tocador."
                    android:id="@+id/textView5"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="534dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="534dp"
                    android:layout_height="wrap_content"
                    android:text="Maridaje: Hamburguesa de buey con cebolla confitada. Es un vino entretenido con buena carga frutal"
                    android:id="@+id/textView6"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="774dp"
        android:layout_height="130dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_toEndOf="@+id/linearLayout"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="559dp"
            android:layout_height="130dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="215dp"
            android:layout_height="130dp"
            android:layout_weight="0"></LinearLayout>
    </LinearLayout>
</RelativeLayout>